@using BookStore.DAL.Models

@model Book

@using (Html.BeginForm("Register", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="pt-3">
        <h1 class="text-center">Inregistrare carte:</h1>
        <div class="row justify-content-between">
            <div class="col-lg-5 form-group">
                @Html.LabelFor(a => a.Title)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Title, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(a => a.Title, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-5 form-group">
                @Html.LabelFor(a => a.Author)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Author, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(a => a.Author, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-5 form-group">
                @Html.LabelFor(a => a.Editura)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Editura, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(a => a.Editura, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-5 form-group">
                @Html.LabelFor(a => a.Price)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Price, new { @class = "form-control", @type = "number" })
                </div>
                @Html.ValidationMessageFor(a => a.Price, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-10 form-group">
                @Html.LabelFor(a => a.Description)
                <div class="input-group">
                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @style = "height:150px;" })
                </div>
                @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.FormFile)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.FormFile, new { @class = "form-control", @type = "file", @accept = "image/*" })
                </div>
                @Html.ValidationMessageFor(a => a.FormFile, "", new { @class = "text-danger" })
            </div>
            <div class="my-3 col-lg-4">
                <input class="btn btn-block btn-danger" type="submit" value="Inregistreaza">
            </div>
        </div>
    </div>
}