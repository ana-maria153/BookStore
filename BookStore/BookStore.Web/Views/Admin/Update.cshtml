@using BookStore.DAL.Models
@model Book

@using (Html.BeginForm("Update", "admin", FormMethod.Post))
{
    <div class="pt-3">
        <div class="row justify-content-between mx-3">
            <div class="col-lg-6 form-group">
                @Html.LabelFor(a => a.Title)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.ID, new { @class = "form-control d-none", @content = $"{Model.ID}" })
                    @Html.TextBoxFor(a => a.Title, new { @class = "form-control", @content = $"{Model.Title}" })
                </div>
                @Html.ValidationMessageFor(a => a.Title, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6 form-group">
                @Html.LabelFor(a => a.Author)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Author, new { @class = "form-control", @content = $"{Model.Author}" })
                </div>
                @Html.ValidationMessageFor(a => a.Author, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6 form-group">
                @Html.LabelFor(a => a.Editura)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Editura, new { @class = "form-control", @content = $"{Model.Editura}" })
                </div>
                @Html.ValidationMessageFor(a => a.Editura, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6 form-group">
                @Html.LabelFor(a => a.Price)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.Price, new { @class = "form-control", @type = "number", @content = $"{Model.Price}" })
                </div>
                @Html.ValidationMessageFor(a => a.Price, "", new { @class = "text-danger" })
            </div>
            <!-- add new view model for updating the book
            <div class="col-lg-12 form-group">
                @* @Html.LabelFor(a => a.BookTypeId)
                <div class="input-group">
                    @Html.DropDownListFor(a => a.ChosedBookType, Model.Types, "--Select--", new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(a => a.BookTypeId, "", new { @class = "text-danger" }) *@
            </div>
                !-->
            <div class="col-lg-12 form-group">
                @Html.LabelFor(a => a.Description)
                <div class="input-group">
                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @content = $"{Model.Description}" })
                </div>
                @Html.ValidationMessageFor(a => a.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.FormFile)
                <div class="input-group">
                    @Html.TextBoxFor(a => a.FormFile, new { @class = "form-control", @type = "file", @accept = "image/*" })
                </div>
                @Html.ValidationMessageFor(a => a.FormFile, "", new { @class = "text-danger", @content = $"{Model.FormFile}" })
            </div>
            <div class="form-group">
                <img class="product-item" src="@Model.Path" alt="ImageCover" />
            </div>
            <div class="my-3 col-lg-4">
                <input class="btn btn-block btn-success" type="submit" value="Salveaza">
            </div>
        </div>
    </div>
}